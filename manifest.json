{
    "name": "Heureka by TopMonks",
    "version": "0.0.3",
    "manifest_version": 2,
    "description": "Ověřuje cenu zboží na Heureka.cz",
    "homepage_url": "https://github.com/topmonks/heureka-extension",
    "icons": {
        "16": "icons/icon16.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": ["src/bg/background.js"],
        "persistent": true
    },
    "permissions": [
        "https://www.heureka.cz/*",
        "https://www.alza.cz/*",
        "https://www.mall.cz/*",
        "https://www.czc.cz/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.alza.cz/*",
                "https://www.mall.cz/*",
                "https://www.czc.cz/*"
            ],
            "js": ["src/inject/inject.js"],
            "css": ["src/inject/inject.css"]
        }
    ]
}
